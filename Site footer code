<style>
  /* עיצוב תגיות (Chip בהיר) */
  .wb-tag {
    background: transparent;       /* רקע אפור עדין */
    color: #333;               /* טקסט שחור */
    border: 1px solid #E0E0E0; /* קו דק סביב */
    padding:8px 12px;
    border-radius: 12px;       /* Chip מרובע־מעוגל */
    font-size: 13px;
    line-height: 1;
    font-style: italic;
    font-weight: 400;
    letter-spacing: .4px;
  }

  .wb-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-top: 14px;
  }

  .wb-tag:hover {
    background: #E8E8E8;       /* רקע טיפה כהה בהובר */
    border-color: #D8D8D8;
  }
</style>

<script>
(function(){
  function toTitleCase(str){
    return str.replace(/\w\S*/g, w => w.charAt(0).toUpperCase() + w.slice(1).toLowerCase());
  }

  function processContainer(root){
    if (!root || root.dataset.wbTagsV2 === "1") return;

    const tags = new Set();
    const HASHTAG_RE = /(^|[\s(\[\{"'“”‘’«»])#([\p{L}\p{N}_-]+)(?=$|[\s).,;:!?/)\]"'“”‘’«»])/gu;

    const walker = document.createTreeWalker(root, NodeFilter.SHOW_TEXT, {
      acceptNode(node){
        if (!node.nodeValue || !node.nodeValue.includes('#')) return NodeFilter.FILTER_SKIP;
        const el = node.parentElement;
        if (el.closest('a, code, pre, button, input, textarea, .wb-tags')) {
          return NodeFilter.FILTER_REJECT;
        }
        return NodeFilter.FILTER_ACCEPT;
      }
    });

    const nodes = [];
    while (walker.nextNode()) nodes.push(walker.currentNode);

    nodes.forEach(node=>{
      const txt = node.nodeValue;
      let last = 0, m, changed = false;
      const frag = document.createDocumentFragment();

      while ((m = HASHTAG_RE.exec(txt)) !== null) {
        const before = txt.slice(last, m.index) + (m[1] || '');
        if (before) frag.appendChild(document.createTextNode(before));
        tags.add(m[2]);
        last = m.index + m[0].length;
        changed = true;
      }
      if (!changed) return;

      if (last < txt.length) frag.appendChild(document.createTextNode(txt.slice(last)));
      node.parentNode.replaceChild(frag, node);
    });

    if (tags.size){
      const wrap = document.createElement('div');
      wrap.className = 'wb-tags';
      Array.from(tags).forEach(raw=>{
        const human = toTitleCase(raw.replace(/[_-]+/g, ' ').trim());
        const span = document.createElement('span');
        span.className = 'wb-tag';
        span.textContent = human;
        wrap.appendChild(span);
      });
      root.appendChild(wrap);
    }

    root.dataset.wbTagsV2 = "1";
  }

  function run(){
    document.querySelectorAll('.fr-view').forEach(el=>{
      if (el.dataset.wbTagsV2 === "1") return;
      if (el.textContent && el.textContent.includes('#')) processContainer(el);
    });
  }

  run();
  const mo = new MutationObserver(()=>run());
  mo.observe(document.body, { childList:true, subtree:true });
  window.addEventListener('popstate', ()=> setTimeout(run, 250));
  window.addEventListener('hashchange', ()=> setTimeout(run, 250));
})();
</script>
